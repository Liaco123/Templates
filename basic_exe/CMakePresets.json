{
  "version": 6,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 23,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "base",
      "hidden": true,
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "cacheVariables": {
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      }
    },
    // --- 1. Clang-CL + MSVC (Recommended Default) ---
    {
      "name": "clang-msvc-release",
      "displayName": "★ Clang-CL + MSVC [Release]",
      "description": "Release build using Clang-CL.",
      "inherits": "base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/deps/clang_msvc/Release/conan_toolchain.cmake"
      }
    },
    {
      "name": "clang-msvc-debug",
      "displayName": "★ Clang-CL + MSVC [Debug]",
      "description": "Debug build using Clang-CL (Good for VS Debugger).",
      "inherits": "base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/deps/clang_msvc/Debug/conan_toolchain.cmake"
      }
    },
    // --- 2. MSVC Native ---
    {
      "name": "msvc-release",
      "displayName": "MSVC Native [Release]",
      "inherits": "base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/deps/msvc/Release/conan_toolchain.cmake"
      }
    },
    {
      "name": "msvc-debug",
      "displayName": "MSVC Native [Debug]",
      "inherits": "base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/deps/msvc/Debug/conan_toolchain.cmake"
      }
    },
    // --- 3. Clang + libc++ (Strict) ---
    {
      "name": "clang-libcxx-release",
      "displayName": "Clang + libc++ [Release]",
      "inherits": "base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/deps/clang/Release/conan_toolchain.cmake"
      }
    },
    {
      "name": "clang-libcxx-debug",
      "displayName": "Clang + libc++ [Debug]",
      "description": "Strict check with debug symbols.",
      "inherits": "base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/deps/clang/Debug/conan_toolchain.cmake"
      }
    },
    // --- 4. Clang + libstdc++ ---
    {
      "name": "clang-std-release",
      "displayName": "Clang + libstdc++ [Release]",
      "inherits": "base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/deps/clang_std/Release/conan_toolchain.cmake"
      }
    },
    {
      "name": "clang-std-debug",
      "displayName": "Clang + libstdc++ [Debug]",
      "inherits": "base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/deps/clang_std/Debug/conan_toolchain.cmake"
      }
    },
    // --- 5. GCC ---
    {
      "name": "gcc-release",
      "displayName": "GCC (MinGW) [Release]",
      "inherits": "base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/deps/gcc/Release/conan_toolchain.cmake"
      }
    },
    {
      "name": "gcc-debug",
      "displayName": "GCC (MinGW) [Debug]",
      "inherits": "base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/deps/gcc/Debug/conan_toolchain.cmake"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "clang-msvc-release",
      "configurePreset": "clang-msvc-release"
    },
    {
      "name": "clang-msvc-debug",
      "configurePreset": "clang-msvc-debug"
    },
    {
      "name": "msvc-release",
      "configurePreset": "msvc-release"
    },
    {
      "name": "msvc-debug",
      "configurePreset": "msvc-debug"
    },
    {
      "name": "clang-libcxx-release",
      "configurePreset": "clang-libcxx-release"
    },
    {
      "name": "clang-libcxx-debug",
      "configurePreset": "clang-libcxx-debug"
    },
    {
      "name": "clang-std-release",
      "configurePreset": "clang-std-release"
    },
    {
      "name": "clang-std-debug",
      "configurePreset": "clang-std-debug"
    },
    {
      "name": "gcc-release",
      "configurePreset": "gcc-release"
    },
    {
      "name": "gcc-debug",
      "configurePreset": "gcc-debug"
    }
  ],
  "testPresets": [
    {
      "name": "clang-msvc-release",
      "configurePreset": "clang-msvc-release"
    },
    {
      "name": "clang-msvc-debug",
      "configurePreset": "clang-msvc-debug"
    },
    {
      "name": "msvc-release",
      "configurePreset": "msvc-release"
    },
    {
      "name": "msvc-debug",
      "configurePreset": "msvc-debug"
    },
    {
      "name": "clang-libcxx-release",
      "configurePreset": "clang-libcxx-release"
    },
    {
      "name": "clang-libcxx-debug",
      "configurePreset": "clang-libcxx-debug"
    },
    {
      "name": "clang-std-release",
      "configurePreset": "clang-std-release"
    },
    {
      "name": "clang-std-debug",
      "configurePreset": "clang-std-debug"
    },
    {
      "name": "gcc-release",
      "configurePreset": "gcc-release"
    },
    {
      "name": "gcc-debug",
      "configurePreset": "gcc-debug"
    }
  ]
}